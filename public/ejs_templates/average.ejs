<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <h2><%= github_login %></h2>
        <hr class="star-primary">
    </div>
  </div>
  <div class="row nav-buttons">
    <div class="btn-group btn-group-justified">
      <div class="general btn-group settings">
        <button type="button" class="btn btn-default">Settings</button>
      </div>
      <div class="active rules btn-group recentStats">
        <button type="button" class="btn btn-default">Recent Stats</button>
      </div>
      <div class="btn-group lifetimeStats">
        <button type="button" class="btn btn-default">Lifetime Stats</button>
      </div>
      <div class="btn-group averageStats">
        <button type="button" class="btn btn-default active">Average Stats</button>
      </div>
    </div>
  </div>
  <div class="row">
    <table class="table table-striped table-bordered table-responsive lifetime-table">
      <tr class="lifetime-table-header">
        <td>Category</td>
        <td>Average (<%= gamesPlayed %> games)</td>
      </tr>
      <tr>
        <td>Kills</td>
        <td><%= kills %></td>
      </tr>
      <tr>
        <td>Deaths</td>
        <td><%= deaths %></td>
      </tr>
      <tr>
        <td>Damage Dealt</td>
        <td><%= damageDealt %></td>
      </tr>
      <tr>
        <td>Mines Captured</td>
        <td><%= minesCaptured %></td>
      </tr>
      <tr>
        <td>Diamonds Earned</td>
        <td><%= diamondsEarned %></td>
      </tr>
        <td>Health Recovered</td>
        <td><%= healthRecovered %></td>
      <tr>
        <td>Graves Robbed</td>
        <td><%= gravesRobbed %></td>
      </tr>
    </table>
  </div>
  <div class="text-center">
    <a href="/logout" type="button" class="btn btn-default logoutButton">
      <i class="glyphicon glyphicon-log-out">&nbsp;</i>Log out
    </a>
  </div>
</div>